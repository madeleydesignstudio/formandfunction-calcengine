{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x build_proto.sh && ./build_proto.sh && pip install -r requirements.txt",
    "watchPatterns": ["**/*.py", "**/*.proto"]
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8081",
        "GRPC_SERVER_ADDRESS": "api.itsformfunction.com:9090",
        "PYTHON_ENV": "production"
      }
    }
  }
}
